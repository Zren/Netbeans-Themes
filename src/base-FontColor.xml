<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE fontscolors PUBLIC "-//NetBeans//DTD Editor Fonts and Colors settings 1.1//EN" "http://www.netbeans.org/dtds/EditorFontsColors-1_1.dtd">
<fontscolors>
    <!-- foreground / background -->
    <fontcolor name="default" bgColor="ff101020" foreColor="ffD0D0D0"/>
    <!-- string (& Character) -->
    <fontcolor name="char" foreColor="ffDC78DC"/>
    <fontcolor name="string" foreColor="ffDC78DC"/>
    <!-- operator -->
    <fontcolor name="operator" foreColor="ffD0D0D0"/>
    <!-- keyword -->
    <fontcolor name="keyword" foreColor="ff00D0D0"/>
    <!-- bracket (Seperator) -->
    <fontcolor name="separator" foreColor="ffD0D0D0"/>
    <!-- number -->
    <fontcolor name="number" foreColor="ffFFFF00"/>
    <!-- (Identifier) -->
    <fontcolor name="identifier"/>
    <!-- field -->
    <fontcolor name="field" default="identifier" foreColor="ffBED6FF"/>
    <!-- method -->
    <fontcolor name="method" default="identifier" foreColor="ffD0D0D0"/>
    <!-- (Comment) -->
    <fontcolor name="comment" foreColor="ff00E000" />
    
    <!-- (Effects) -->
    <fontcolor name="warning" waveUnderlined="yellow"/>
    <fontcolor name="error" waveUnderlined="red"/>
    <fontcolor name="url" underline="blue"/>
    
    <!-- (Whitespace) -->
    <fontcolor name="whitespace"/>
    
    
    <!-- (Markup) -->
    <fontcolor name="markup-element" default="keyword" /><!-- <tag ... > -->
    <fontcolor name="markup-attribute" default="field" /> <!-- ... name=... (Includes the =)-->
    <fontcolor name="markup-attribute-value" default="string" /> <!-- ..."string" ... -->
    
    <!-- (Ampersand escape code. Eg: &amp;) [Eclipse treats these as keywords]  -->
    <fontcolor name="entity-reference" default="keyword">
        <font style="bold"/>
    </fontcolor>
</fontscolors>
